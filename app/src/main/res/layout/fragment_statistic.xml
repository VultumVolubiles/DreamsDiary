<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="all"
            type="String" />

        <variable
            name="fav"
            type="String" />

        <variable
            name="lic"
            type="String" />

    </data>

<android.support.constraint.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBackground">


    <ImageView
        android:id="@+id/imageViewStatistic"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:contentDescription="@string/title_statistic"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_statistic" />

    <TextView
        android:id="@+id/statistic_all"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:text="Всего записей"
        android:textColor="@color/colorText"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageViewStatistic" />

    <TextView
        android:id="@+id/statistic_favorite"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="4dp"
        android:text="Избранные"
        android:textColor="@color/colorText"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/statistic_all" />

    <TextView
        android:id="@+id/statistic_licuid"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="4dp"
        android:text="Осознанные"
        android:textColor="@color/colorText"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/statistic_favorite" />

    <TextView
        android:id="@+id/all"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:text="@{all}"
        android:textColor="@color/colorText"
        app:layout_constraintStart_toEndOf="@+id/statistic_all"
        app:layout_constraintTop_toTopOf="@+id/statistic_all" />

    <TextView
        android:id="@+id/fav"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:text="@{fav}"
        android:textColor="@color/colorText"
        app:layout_constraintStart_toStartOf="@+id/all"
        app:layout_constraintTop_toBottomOf="@+id/all" />

    <TextView
        android:id="@+id/lic"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:text="@{lic}"
        android:textColor="@color/colorText"
        app:layout_constraintStart_toStartOf="@+id/fav"
        app:layout_constraintTop_toBottomOf="@+id/fav" />
</android.support.constraint.ConstraintLayout>
</layout>